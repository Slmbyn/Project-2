<%- include('../partials/header') %>

<div class="title">
    <h1>Car's details</h1>
</div>

<div class="show-main">

    <div class="show-car-img-container">
        <p><img class="show-car-img" src=<%= carDetails.image %> alt=""></p>
    </div>

    <div class="car-info">
        <div class="show-cartype">
            <p class="show-year"><%= carDetails.year %></p>
            <p class="show-make"><%= carDetails.make %></p>
            <p class="show-model"><%= carDetails.model %></p>
        </div>
        <div class="price-color-description">
            <p class="show-color"><%= carDetails.color %></p>
            <p class="show-price">$<%= carDetails.price %></p>
            <p class="show-description"><%= carDetails.description %></p>
        </div>
    </div>
    <%if (carDetails.owner?.toString() === userId?.toString()) {%>
        <div class="edit-delete">
            <p> <a href="/myCars/<%=carDetails._id%>/edit" class="show-edit"> Edit </a></p>
            <form action="/myCars/<%= carDetails._id %>?_method=DELETE" method="POST" class="show-delete">
                <button type="submit">ğŸš®</button>
            </form>
        </div>
        <% } else { %>
            <div class="show-buy">
                <p> <a href="/payment"> Buy</a></p>
            </div>
        <% } %>
</div>

  <%- include('../partials/footer') %>