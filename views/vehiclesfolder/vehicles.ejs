<%- include('../partials/header') %>

<h1>See all cars here</h1>


<table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Year</th>
        <th>Make</th>
        <th>Model</th>
        <th>Price</th>
        <th>Color</th>
        <th>Details</th>
        <th>Buy</th>
      </tr>
    </thead>
    <tbody>
    <%if (vehicleList.length) {%>
      <% vehicleList.forEach(function(c) { %>
        <tr>
            <td><img src=<%= c.image %> alt=""></td>
            <td><%= c.year %></td>
            <td><%= c.make %></td>
            <td><%= c.model %></td>
            <td><%= c.price %></td>
            <td><%= c.color %></td>
            <td> <a href="/vehicles/<%= c.id %>"> Details </a></td>
            <td> <a href="/payment/<%= c.id %>"> BUY </a></td>
        </tr>
      <% }); %>
      <% } else {%>
        <h3>No Cars Yet</h3>
      <% } %>
    </tbody>
  </table>